<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ValidaConta</servlet-name>
        <servlet-class>br.com.bancounipaulistana.servlets.conta.ValidaConta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExibeConta</servlet-name>
        <servlet-class>br.com.bancounipaulistana.dao.conta.ExibeConta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExibePlanos</servlet-name>
        <servlet-class>br.com.bancounipaulistana.servlets.planosdeprevidencia.ExibePlanos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdquirirPlano</servlet-name>
        <servlet-class>br.com.bancounipaulistana.servlets.planosdeprevidencia.AdquirirPlano</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlanosContratados</servlet-name>
        <servlet-class>br.com.bancounipaulistana.servlets.planosdeprevidencia.PlanosContratados</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidaConta</servlet-name>
        <url-pattern>/ValidaConta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExibeConta</servlet-name>
        <url-pattern>/ExibeConta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExibePlanos</servlet-name>
        <url-pattern>/ExibePlanos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdquirirPlano</servlet-name>
        <url-pattern>/AdquirirPlano</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlanosContratados</servlet-name>
        <url-pattern>/PlanosContratados</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
